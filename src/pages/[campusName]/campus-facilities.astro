export function getStaticPaths() {
  return [
    { params: { campusName: "kanakapura" } },
    { params: { campusName: "marathahalli" } },
  ];
}

---

<TopNavigationBar/>

<div class='min-h-[512px] max-h-[512px] w-full flex justify-center items-center flex-col max-md:min-h-[350px]' style={{
  background: `linear-gradient(180deg, rgba(18, 18, 18, 0) -21.78%, rgba(0, 0, 0, 0.7) 68.07%), url(${astronautKidsAdmissionBG})`,
  backgroundPosition: '90% 50%',
  backgroundRepeat: 'no-repeat',
  backgroundSize: 'cover',
}}>
  <Text type={'h2'} class='mt-14 font-bold max-md:mt-10 text-yellow'>Campus Facilities</Text>
  <Text type={'base'} class='mt-3 text-center max-md:w-[90%] text-white' >{`${campusName.charAt(0).toUpperCase() + campusName.substring(1)} Campus`}</Text>
</div>

<div id="campus-facilities" style="scroll-margin: 60px;" class="p-xl px-xl flex flex-col justify-center gap-l scroll-m-14 max-sm:p-r max-sm:gap-r max-md:mt-4">
    <Heading first="Discover our" second={"Campus"} subtitle="Explore Insight" />
    <div class="flex flex-row w-full justify-center max-md:flex-col">
      <Text type="regular" class="text-neutral-dark-grey max-md:mb-5 max-w-5xl text-center flex-1 mr-4">
        Discover a nurturing environment with well-designed classrooms, sprawling grounds, and a host of facilities, all dedicated to providing students with a holistic and enriching educational experience.
      </Text>
      <!-- <a href={campusName === 'marathahalli'
        ? ""
        : "https://drive.google.com/file/d/1VcI-cGbtwI0FaUyCanqv2AxzfNaTc6La/view?usp=sharing"
      } target="_blank" class="">
        <Button>Watch Campus Tour</Button>
      </a> -->
  
    </div>

      <Carousel class="gap-16 p-5 pt-8 mt-2 max-md:gap-14 max-md:pt-8 no-scrollbar" id="campus-showcase" stackOnMobile>
        <!--
          <CarouselCard>
            <DeckCard
              ../images={[
                { src: aroundthecampus1, alt: '' },
                { src: aroundthecampus2, alt: '' }
              ]}
              target="around-the-campus"
            >
              <Text type="xs" class='uppercase text-center mt-8 max-md:mt-5 text-[#006BB3] font-bold underline max-md:text-sm'>
                Around the campus
              </Text>
            </DeckCard>
          </CarouselCard>
          -->
        <CarouselCard >
          <DeckCard
            images={[
              { src: classrooms1k, alt: '' },
              { src: classrooms2k, alt: '' }
            ]}
            target="classrooms-knk"
          >
            <Text type="xs" class='uppercase text-center mt-8 max-md:mt-5 text-[#006BB3] font-bold underline max-md:text-sm'>
              Classrooms
            </Text>
          </DeckCard>
        </CarouselCard>
        
        <CarouselCard>
          <DeckCard
            images={[
              { src: labs1k, alt: '' },
              { src: labs2k, alt: '' }
            ]}
            target="academic-labs-knk"
          >
            <Text type="xs" class='uppercase text-center mt-8 max-md:mt-5 text-[#006BB3] font-bold underline max-md:text-sm'>
              Academic Labs
            </Text>
          </DeckCard>
        </CarouselCard>
        <CarouselCard>
          <DeckCard
            images={[
              { src: coScholastic1k, alt: '' },
              { src: coScholastic2k, alt: '' }
            ]}
            target="extrafacility-knk"
          >
            <Text type="xs" class='uppercase text-center mt-8 max-md:mt-5 text-[#006BB3] font-bold underline max-md:text-sm'>
              Co-Scholastics
            </Text>
          </DeckCard>
        </CarouselCard>
        <CarouselCard>
          <DeckCard
            images={[
              { src: sportfacility1k, alt: '' },
              { src: sportfacility2k, alt: '' }
            ]}
            target="sportsfacility-knk"
          >
            <Text type="xs" class='uppercase text-center mt-8 max-md:mt-5 text-[#006BB3] font-bold underline max-md:text-sm'>
              Sports
            </Text>
          </DeckCard>
        </CarouselCard>
      </Carousel>


  </div>

  {campusName === 'marathahalli' && (
  <Gallery
    id="around-the-campus"
    gallery={[
      { src: aroundthecampus1, caption: "Transport Buses" },
      { src: aroundthecampus2, caption: "Campus Exterior" },
      { src: aroundthecampus3, caption: "Campus Exterior" },
      { src: aroundthecampus4, caption: "Campus Exterior" }
    ]}
  />
  <Gallery
    id="classrooms"
    gallery={[
      // { src: classroom1, caption: "Activity Room" },
      { src: prePrimary, caption: "Pre-Primary Classroom" },
      { src: primary, caption: "Primary Classroom" },
      { src: secondary, caption: "Secondary Classroom" },
      { src: classroom4, caption: "Library" },
    ]}
  />
  <Gallery
    id="academic-labs"
    gallery={[
      { src: academiclabs1, caption: "Biology Lab" },
      { src: academiclabs2, caption: "Chemistry Lab" },
      { src: academiclabs3, caption: "Computer Lab" },
      { src: academiclabs4, caption: "Physics Lab" }
    ]}
  />
  <Gallery
    id="extrafacility"
    gallery={[
      { src: extrafacility1, caption: "Yoga" },
      { src: extrafacility2, caption: "Music Room - Orchestra" },
      { src: extrafacility3, caption: "Robotics Lab" },
      { src: extrafacility4, caption: "Music Room - Piano " },
      { src: extrafacility5, caption: "Well-equipped Infirmary" },
      { src: extrafacility6, caption: "Guitar Room" },
      { src: extrafacility7, caption: "Drums Room" }
    ]}
  />
  <Gallery
    id="sportsfacility"
    gallery={[
      { src: sportsfacility1, caption: "Basketball" },
      { src: sportsfacility2, caption: "Skating" },
      { src: sportsfacility3, caption: "Cricket" },
      { src: sportsfacility4, caption: "Swimming" },
      { src: sportsfacility5, caption: "Football" }
    ]}
  />
)}


{campusName === 'kanakapura' && (
  <Gallery
    id="around-the-campusk"
    gallery={[
      { src: aroundthecampus1, caption: "Transport Buses" },
      { src: aroundthecampus2, caption: "Campus Exterior" },
      { src: aroundthecampus3, caption: "Campus Exterior" },
      { src: aroundthecampus4, caption: "Campus Exterior" }
