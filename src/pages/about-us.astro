<Layout title="Welcome to Astro.">
  <div class="flex flex-col">
    <TopNavigationBar />
    <!-- section -->
    
    <div class="flex flex-col relative">
      <div class="max-h-[400px] flex">
      <div
        class="absolute inset-0 bg-black-100 w-full h-full z-[9] hidden  max-sm:flex"
        style={{
          backgroundImage: `linear-gradient(0deg, #1b2226 -36.91%, #052b4cb0 69.9%, #1370a77a 131.56%), url(${PreviewImage})`
        }}
      ></div>

          <Hero
              config={
                  {
                      previewImage: PreviewImage,
                  }
              }
              showCta={false}
          >
              <Text type="h2" slot="title" class="font-displat font-bold  text-yellow">About Us</Text>
              <Text type="p" slot="ctaButton" class="max-w-[37ch]">{"Managed by Insight Educational Trust, Insight Academy was founded in 2007 to deliver quality education to all. Management consists of trust members guiding strategic decisions, and a governing council overseeing daily operations. "}</Text>
              <Image slot="previewImage" src={PreviewImage} className="w-[50%] h-full object-cover object-center z-[90] absolute right-0 max-sm:hidden" /> 
             
          </Hero>
      </div>
      <!-- linear-gradient(270deg,_#0C4974_4.9%,_#142634_65.98%) -->

      <div
        slot="footer"
        class=" w-full p-r flex flex-wrap items-center justify-center z-10  max-sm:bg-none bg-[linear-gradient(270deg,_#0C4974_4.9%,_#142634_65.98%)]">
        <Constrain class="flex justify-between items-center" width="1000px">
