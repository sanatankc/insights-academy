---
import Layout from '../layouts/Layout.astro';

import Text from '../components/system/Text.astro';
import BigAdmissionCTA from '../components/BigAdmissionCTA.astro';

import clubsBGimage from '../images/clubs/clubsBGImage.jpeg';

import Button from '../components/system/Button.astro';

import TopNavigationBar from '../components/TopNavigationBar.astro';
import AdmissionMarquee from '../components/campus/admissionMarquee.astro';

import '../global.css'
import GalleryMarquee from '../components/campus/galleryMarquee.astro';
import Footer from '../components/landingPage/Footer.astro';

import art from '../images/clubs/art.png'
import debate from '../images/clubs/debate.png'
import eco from '../images/clubs/eco.png'
import firstFoot from '../images/clubs/firstFoot.png'
import heritage from '../images/clubs/heritage.png'
import math from '../images/clubs/math.png'
import scouts from '../images/clubs/scouts.png'
import science from '../images/clubs/science.png'
import literary from '../images/clubs/literary.png'
import Constrain from '../components/system/Constrain.astro';




const clubs = [
  {
    title: "Debate & Quizzing Club",
    description: "Students harness their persuasive prowess and broaden their knowledge horizons in our dynamic Debate and Quizzing Club. Our club aims at amplifying their oratory skills, dive into global affairs, and ignite competitive spirit.",
    thumbnail: debate,
  },
  {
    title: "Art Mania",
    description: "Students unleash their creativity in our vibrant Art Mania Club, exploring diverse art forms, expressing freely, and nurturing their imagination in an artistic environment.",
    thumbnail: art,
  },
  {
    title: "Eco Warriors",
    description: "Students immerse in a passion for the environment at our empowering Eco-Club, making a difference as we engage, inspire, and take action for a sustainable future.",
    thumbnail: eco,
  },
  {
    title: "Mad Scientist",
    description: "Fuelling scientific curiosity and hands-on learning in our Science Club, students dive into projects, research, and hands-on experiments, building curiosity and scientific knowledge.",
    thumbnail: science,
  },
  {
    title: "Literary Club",
    description: "Our literary Club inculcates a flair for the language and enhance literary skills among the students, encouraging them to become orators and display their intellectual, independent thinking skills and imbibe a sense of confidence.",
    thumbnail: literary,
  },
  {
    title: "Math Magicians",
    description: "While developing math skills and knowledge, our club also enriches student's skills with higher-order thinking, and prepare them for future math competitions.",
    thumbnail: math,
  },
  {
    title: "Scouts & Guides",
    description: "Scouts and Guides empower students to reach their full potential, fostering character, health habits, handicrafts while acquiring useful skills, and responsible citizenship.",
    thumbnail: scouts,
  },
  {
    title: "First Foot Forward",
    description: "This clubs aims at uniting like minded young entrepreneurs, igniting business ideas and exploring the nuances of it. It exposes the students to Case Studies, Social Entrepreneurship, and Knowledge Sharing.",
    thumbnail: firstFoot,
  },
  {
    title: "Heritage Club",
    description: "Ignite the power within students to become responsible, productive, and invaluable contributors to society. Our Heritage Club aims to foster cultural understanding, intellectual curiosity, and virtual exploration of India's rich diversity.",
    thumbnail: heritage,
  },
]

---

<Layout title="Welcome to Astro.">
  <main class="flex flex-col h-screen w-screen relative bg-white">
    <div 
      class="flex-1 main-container h-screen w-screen"
      style={{
        overflowY: 'overlay',
        overflowX: 'hidden',
      }}
    >
      <div class='flex flex-col bg-white'>
        <TopNavigationBar />
        <div class='h-[72.6px] w-full bg-black'>
        </div>
  
        <div class='min-h-[350px] max-h-[350px] w-full flex justify-center items-center flex-col max-md:min-h-[350px]' style={{
          background: `linear-gradient(180deg, rgba(18, 18, 18, 0) -21.78%, rgba(0, 0, 0, 0.5) 68.07%), url(${clubsBGimage})`,
          backgroundPosition: 'top center',
          backgroundSize: 'cover'

          // backgroundAttachment: 'fixed',
        }}>
          <Text type={'h2'} class='mt-14 max-md:mt-10'>Glentree Clubs</Text>
          <Text type={'base'} class='mt-3 text-center max-md:w-[90%]' >Experience Personalized Learning and Enrichment with Our Dynamic Clubs</Text>
          <!-- <a href="https://admissions.glentreeacademy.com" target='_blank'>
            <Button class='mt-3'>Apply Now</Button>
          </a> -->
        </div>

        
        <div class='w-full  px-20 py-16  max-md:px-4 max-md:py-6' style={{
          background: 'linear-gradient(180deg, #000000 0%, #142C1E 108.48%)'
        }}>
          <Constrain class="flex flex-row flex-wrap gap-5 justify-center items-center">
            {clubs.map(club => (
              <div 
                style={{
                  background: 'rgba(255, 255, 255, 0.04)',
                  border: '0.807503px solid rgba(255, 255, 255, 0.24)',
                  backdropFilter: 'blur(16px)',
                  borderRadius: '24px'
                }} 
                class='p-4 w-[400px] min-h-[530px]'
              >
                <div
                  class='w-full h-[320px] bg-cover bg-center rounded-2xl' 
                  style={{
                    backgroundImage: `url(${club.thumbnail})`
                  }}
                ></div>
                <Text type='h4' class='mt-4'>{club.title}</Text>
                <Text type='sm' class='mt-2 text-white/80'>{club.description}</Text>
              </div>
            ))}

          </Constrain>
        </div>
        <Footer />
      </div>
    </div>
  </main>
</Layout>
