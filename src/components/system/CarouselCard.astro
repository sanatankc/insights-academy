---
const {img, title , className,style,index} = Astro.props
import Text from "../system/Text.astro";

---

<div
  class={`scroll-card flex-shrink-0 bg-[#ffffff] rounded-[5.26px] p-5 pb-3 ${className} w-[310px] max-md:w-[280px]`}
  style=`
    box-shadow: 0px 0px 15.77px 0px rgba(0, 0, 0, 0.1);
    transform-origin: top left;
  `   
>
  <img src={img} alt="" class="w-full h-[270px] object-cover rounded-[5.26px] mb-2 max-sm:h-[240px]" />
  <Text type="regular" class="text-black text-center">