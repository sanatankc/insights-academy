---
// import { Image } from 'astro:assets';
import logo from '../../images/logo.svg'
import theDotStudioLogo from '../icons/theDotStudioLogo.png'
import facebook from '../../icons/socials/Facebook.svg'
import instagram from '../../icons/socials/Instagram.svg'
import linkedin from '../../icons/socials/LinkedIn.svg'
import twitter from '../../icons/socials/Twitter.svg'
import youtube from '../../icons/socials/YouTube.svg'
import emailIcon from '../../icons/Email.svg'
import phoneIcon from '../../icons/Phone.svg'
import locationIcon from '../../icons/Location.svg'
import Text from '../system/Text.astro'
import Constrain from '../system/Constrain.astro'
import config from '../../../config'

const contactDetailsKnk = config.campus[0]
const contactDetailsMarth = config.campus[1]

const baseURL = 'https://navigate-designer-808266.framer.app/'
const url = `https://www.thedotstudio.in/?utm_source=SchoolWebsite&utm_medium=footer&utm_content=`
---
<div
  class='w-full pt-12 flex flex-col items-center text-white'
  style={{
    background: 'black'
}}>
  <div class='w-full px-16 max-md:px-6 flex justify-center'>
    <Constrain class="flex flex-row max-md:flex-col justify-between">
      <div>
        <img src={logo} alt="Glentree's Logo" class="w-32 h-auto self-start">
      </div>
  
      <div class='flex flex-row max-md:flex-col'>
        <div class='max-md:mt-8 max-md:mb-5 max-w-[325px]'>
          <Text type={'base'} class='text-yellow mb-7 max-md:mb-3 font-semibold'>Kanakapura Road</Text>
  
          <div class='flex flex-row items-center mb-3'>
            <div class='w-5 flex-shrink-0'>
              <img src={emailIcon} alt="Email Icon" class="w-full h-full">
            </div>
            <a target='_blank' href={`mailto:${contactDetailsKnk.contact?.details.workingHours.value}`} class="hover:underline">
              <Text type={'regular'} class='ml-2'>{contactDetailsKnk.contact?.details.workingHours.value}</Text>
            </a>
          </div>
  
          <div class='flex flex-row items-center mb-3'>
            <div class='w-5'>
              <img src={phoneIcon} alt="Phone Icon" class="w-full h-full">
            </div>
            <a target='_blank' href={`tel:${contactDetailsKnk.contact.details.phoneNo.value.split(',')[0].replaceAll(' ', '')}`} class="hover:underline"><Text type={'regular'} class='ml-2'>{contactDetailsKnk.contact.details.phoneNo.value.split(',')[0]}</Text></a>
  
          </div>
  
          <div class='flex flex-row items-start mb-3 '>
            <div class='w-[1.25rem] flex-shrink-0'>
              <img src={locationIcon} alt="Location Icon" class="w-full h-full">
            </div>
            <a target='_blank' href={contactDetailsKnk.contact?.mapLink}>
              <Text type={'regular'} class='ml-2'>{contactDetailsKnk.contact?.details.address.value}</Text>
            </a>
          </div>
        </div>
        <div class='ml-16 max-md:ml-0 max-w-[325px]'>
          <Text type={'base'} class='text-yellow mb-7 max-md:mb-3 font-semibold'>Marathahalli</Text>
  
          <div class='flex flex-row items-center mb-3'>
            <div class='w-5 flex-shrink-0'>
              <img src={emailIcon} alt="Email Icon" class="w-full h-full">
            </div>
            <a target='_blank' href={`mailto:${contactDetailsMarth.contact?.details.workingHours.value}`} class="hover:underline">
              <Text type={'regular'} class='ml-2'>{contactDetailsMarth.contact?.details.workingHours.value}</Text>
            </a>
          </div>
  
          <div class='flex flex-row items-center mb-3'>
            <div class='w-5'>
              <img src={phoneIcon} alt="Phone Icon" class="w-full h-full">
            </div>
            <a target='_blank' href={`tel:${contactDetailsMarth.contact.details.phoneNo.value.split(',')[0].replaceAll(' ', '')}`} class="hover:underline"><Text type={'regular'} class='ml-2'>{contactDetailsMarth.contact.details.phoneNo.value.split(',')[0]}</Text></a>
  
          </div>
  
          <div class='flex flex-row items-start mb-3 '>
            <div class='w-[1.25rem] flex-shrink-0'>
              <img src={locationIcon} alt="Location Icon" class="w-full h-full">
            </div>
            <a target='_blank' href={contactDetailsMarth.contact?.mapLink}>
              <Text type={'regular'} class='ml-2'>{contactDetailsMarth.contact?.details.address.value}</Text>
            </a>
          </div>
        </div>
        
      </div>
    </Constrain>
  </div>

  <div class='w-full h-[1px] bg-gray-500/40 mt-12 max-md:mt-5 max-md:w-[85%]'></div>

  <div class='py-6 font-normal px-16 w-full  max-md:px-6 text-center'>
    <Constrain class="flex flex-row justify-between max-md:flex-col max-md:items-center">
      <div class="flex flex-row">
        <Text type={'regular'}>
          Copyright Â© 2023 &nbsp;
        </Text>
     
        <Text type={'regular'}>
          <span class="max-md:hidden">{' | '}</span> 

          <a 
            href="/mandatory" 
            class="underline"
          >CBSE Mandatory Disclosure</a>
          
        </Text>
      </div>

      <div class="max-md:pt-4" />

      <div>
        <a href={url} target="_blank" data-dot-studio-footer>
          <img src={theDotStudioLogo} class="w-[200px] max-md:w-[180px] max-md:mt-4 mt-0" alt={"Website Designed by The Dot Studio"} />
        </a>
      </div>
    </Constrain>
  </div>
</div>

<script>
  const currentDomainBase = window.location.origin;
  console.log(currentDomainBase);
    const dotStudioLogo = document.querySelector('[data-dot-studio-footer]');

  dotStudioLogo.href = dotStudioLogo.href + currentDomainBase;
</script>